<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.courses.CoursesFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logohsspl"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header1"
                    android:layout_width="match_parent"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_firstext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_secondtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_thirdtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_fourthtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_fifthtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_sixthtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#B6B5B5"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cour_header7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                    android:text=""/>

                <TextView
                    android:id="@+id/cour_seventhtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cour_text"
                    android:visibility="gone"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>